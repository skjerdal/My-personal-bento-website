---
import Layout from '../layouts/Layout.astro';
import CardWrapper from '../components/CardWrapper.astro';
import { cards } from '../data/cardContent';
---

<Layout title="Thomas Skjerdal - Personal Website">
  <main class="container">
    <div class="card-grid">
      {cards.map((card) => (
        <CardWrapper
          isUnique={card.isUnique}
          title={card.title}
          content={card.content}
          componentName={card.component}
          position={card.position}
          className="card"
          style={`grid-column: span ${card.position.span}`}
        />
      ))}
    </div>
  </main>
</Layout>

<script>
	console.log('index.astro script executed');
</script>

<style lang="scss">
@import '../styles/variables';
@import '../styles/mixins';
@import '../styles/functions';

.card-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 14px;
  grid-auto-rows: minmax(200px, auto);
  grid-auto-flow: dense;

  @include respond-to(large) {
    grid-template-columns: repeat(3, 1fr);
    max-width: breakpoint(medium);
  }

  @include respond-to(medium) {
    grid-template-columns: repeat(2, 1fr);
    max-width: breakpoint(small);
  }

  @include respond-to(small) {
    grid-template-columns: 1fr;
    max-width: breakpoint(x-small);
  }
}

.card {
  background-color: rgba(26, 25, 29, 0.5);
  border-radius: 1rem;
  padding: 1.5rem;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  display: flex;
  flex-direction: column;
  overflow: hidden;

  @include respond-to(small) {
    &[data-span="2"] {
      grid-column: span 2;
    }

    &[data-span="3"] {
      grid-column: span 3;
    }
  }
}

	</style>
	