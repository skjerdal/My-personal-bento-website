---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Home">
	
<div class="container mx-auto px-4">
	<h1 class="text-4xl font-bold font-mono">Welcome to my website, I'm <span class="text-purple-500 glow">Thomas Skjerdal</span></h1>
	<p class="text-xl">I'm a software developer from Norway.</p>
	
  
	<section class="cards">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
		  <div class="card">
			<h2 class="card-title">About Me</h2>
			<p class="card-content">...</p>
		  </div>
		  <div class="card">
			<h2 class="card-title">My Projects</h2>
			<p class="card-content">...</p>
		  </div>
		  <!-- Add more cards as needed -->
		</div>
	  </section>
</div>

</Layout>

  <style>
	@import 'tailwindcss/base';
	@import 'tailwindcss/components';
	@import 'tailwindcss/utilities';

	body {
	@apply bg-gray-800 text-white;
	}

	h1 {
	@apply text-purple-500 text-4xl;
	}

	.cards {
	@apply flex flex-wrap justify-center;
	}

	.card {
	@apply bg-gray-700 rounded-lg p-6 m-4 w-64;
	}

	.card-title {
	@apply text-2xl mb-4;
	}

	@keyframes glow {
	0% {
		text-shadow: 0 0 5px #9d4edd, 0 0 10px #9d4edd, 0 0 7px #9d4edd, 0 0 20px #7e2dff, 0 0 35px #7e2dff, 0 0 40px #7e2dff, 0 0 50px #7e2dff, 0 0 75px #7e2dff;
	}
	
	100% {
		text-shadow: 0 0 20px #9d4edd, 0 0 30px #9d4edd, 0 0 10px #9d4edd, 0 0 50px #7e2dff, 0 0 70px #7e2dff, 0 0 80px #7e2dff, 0 0 100px #7e2dff, 0 0 150px #7e2dff;
	}
	}

	.glow {
	animation: glow 2s ease-in-out infinite alternate;
	}

	.container {
	display: grid;
	place-items: center;
	gap: 2rem;
	}

	.grid {
	display: grid;
	grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
	gap: 2rem;
	}


  </style>