---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="no">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.css' rel='stylesheet' />
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.js'></script>
  </head>

  <body>
    <div>
    <slot />
  </body>

</html>

<style is:global>
  /* Add your global styles here */
  :root {
  --background: 5, 5, 5;
  --text: 255, 255, 255;

  --grey-light: 169, 169, 169;
  --grey: 128, 128, 128;
  --grey-dark: 105, 105, 105;

  --black: 0, 0, 0;
  
  --grey-gradient: linear-gradient(45deg, rgb(var(--grey)), rgb(var(--grey-light)) 30%, rgb(var(--text)) 60%);
  --black-gradient: linear-gradient(45deg, rgb(var(--black)), rgb(var(--grey-dark)) 30%, rgb(var(--text)) 60%);
}

    html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
	}

  body {
  background-color: rgb(var(--background));
  color: rgb(var(--text));
}

.accent {
  background-image: var(--grey-gradient);
}

  .container {
    max-width: 960px;
    margin: 0 auto;
    padding: 20px;
  }

</style>
