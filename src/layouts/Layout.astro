<style is:global>
  @import 'tailwindcss/base';
	@import 'tailwindcss/components';
	@import 'tailwindcss/utilities';
	
  :root {
  --background: 15, 15, 15;
  --light-background: 240,240,240;
  --text: 255, 255, 255;
  --light-text: 0, 0, 0;

  --grey-light: 169, 169, 169;
  --grey: 158, 158, 158;
  --grey-dark: 26, 25, 29;

  --black: 0, 0, 0;
  
