---
interface Props {
  title: string;
  text: string;
  width: string;
}

const {title, text, width}  = Astro.props;
---

<div class="cardlg large rounded-3xl" style={`width: ${width};`}>
    <h2>{title}</h2>
    <p>{text}</p>
    <slot />
</div>

<style is:inline>

    .cardlg {
        padding: 32px;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);

            background-color: rgba(26, 25, 29, 0.5);

            height: 400px;
            overflow: hidden; /* Hide the overflowing parts of the pseudo-elements */
            
            
        }
    
    .cardlg h2 {
        color: rgb(var(--text));
        font-size: 2rem;
    }

    .cardlg p {
        color: rgb(var(--grey));
        font-size: 1rem;
    }

</style>
