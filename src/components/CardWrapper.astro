---
import Card from './Card.vue';
import PokemonCard from './PokemonCard';

const { isUnique, className, style, componentName, position, title, content, ...props } = Astro.props;
---

{isUnique ? (
  <PokemonCard 
    client:load 
    className={className} 
    style={style} 
    componentName={componentName}
    position={position}
    title={title}
    content={content}
    {...props}
  />
) : (
  <Card 
    client:load 
    className={className} 
    style={style} 
    componentName={componentName}
    position={position}
    title={title}
    content={content}
    {...props}
  />
)}