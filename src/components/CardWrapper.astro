---
import Card from './Card.vue';
import PokemonCard from './PokemonCard';

const { isUnique, title, content, componentName, position, className, style } = Astro.props;
const span = position?.span || 1;
---

<div class={`card ${className || ''}`} data-span={span} style={`grid-column: span ${span}; display: grid;`}>
  {isUnique ? (
    <PokemonCard 
      client:load 
      className={className} 
      componentName={componentName}
      position={position}
      title={title}
      content={content}
      style={style}
    />
  ) : (
    <Card 
      client:load 
      className={className} 
      componentName={componentName}
      position={position}
      title={title}
      content={content}
    />
  )}
</div>

<style lang="scss" scoped>
  @import '../styles/variables';
  @import '../styles/mixins';
  @import '../styles/functions';

.card {
  &[data-span="2"] {
    grid-column: span 2;
  }

  &[data-span="3"] {
    grid-column: span 3;
  }

  @include respond-to(medium) {
    &[data-span="3"] {
      grid-column: span 2 !important;
    }
  }

  @include respond-to(small) {
    &[data-span="2"],
    &[data-span="3"] {
      grid-column: span 1 !important;
    }
  }
}
</style>